@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}

        <section class="intro">
            <div class="bg-image h-100">
                <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0,0,0,.35);">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="table-responsive bg-white" data-mdb-perfect-scrollbar="true"
                                    style="position: relative; height: 450px; width: 100%;">
                                    <table class="table">
                                        <h1>Listado de Propietarios</h1>
                                        <thead>
                                            <tr>
                                                <th scope="col">NOMBRES</th>
                                                <th scope="col">APELLIDOS</th>
                                                <th scope="col">DETALLES</th>
                                                <th scope="col">EDITAR</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var dueno in Model.listaDuenos)
                                            {
                                                <tr>
                                                    <td scope="row" style="color: #666666;">@dueno.Nombres</td>
                                                    <td scope="row" style="color: #666666;">@dueno.Apellidos</td>

                                                    <td>
                                                        <a class="btn btn-danger table-btn" asp-page="./DetallesDuenos"
                                                        asp-route-duenoId="@dueno.Id">
                                                            Detalle Dueno
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger table-btn" asp-page="./EditarDuenos"
                                                        asp-route-duenoId="@dueno.Id">
                                                            Editar Dueno
                                                        </a>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <a class="btn btn-danger table-btn" asp-page="./EditarDuenos"
                                        class="btn-default">Adicionar Dueño</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
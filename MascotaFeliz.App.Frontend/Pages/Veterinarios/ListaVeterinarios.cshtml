@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinariosModel
@{
}

<section class="intro">
            <div class="bg-image h-100">
                <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0,0,0,.35);">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="table-responsive bg-white" data-mdb-perfect-scrollbar="true"
                                    style="position: relative; height: 450px; width: 100%;">
                                    <table class="table">
                                        <h1>Listado de Veterinarios</h1>
                                        <thead>
                                            <tr>
                                                <th scope="col">NOMBRES</th>
                                                <th scope="col">APELLIDOS</th>
                                                <th scope="col">DETALLES</th>
                                                <th scope="col">EDITAR</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var veterinario in Model.listaVeterinarios)
    {
        <tr>
            <td>@veterinario.Nombres</td>
            <td>@veterinario.Apellidos</td>
            
            <td>
                <a class="btn btn-danger table-btn" asp-page="./DetallesVeterinarios" asp-route-veterinarioId="@veterinario.Id">
                    Detalle Veterinario
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn" asp-page="./EditarVeterinarios" asp-route-veterinarioId="@veterinario.Id">
                    Editar Veterinario
                </a>
            </td>
        </tr>
    }
                                        </tbody>
                                    </table>
                                    <a class = "btn btn-danger table-btn" asp-page="./EditarVeterinarios" class="btn-default">Adicionar Veterinario</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
